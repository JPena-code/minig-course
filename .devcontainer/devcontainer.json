{
  "image": "mcr.microsoft.com/devcontainers/python:3.9",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "python -m venv --copies --prompt container ./.env && source ./.env/bin/activate",
  "postCreateCommand": "python -m pip install -r requirements.txt",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "upgradePackages": "true"
    }
  },
  "customizations": {
    "customizations": {
    "vscode": {
        "extensions": [
          "ms-toolsai.jupyter",
          "ms-python.python"
        ]
    }
    }
  }
}
